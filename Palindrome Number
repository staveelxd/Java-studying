class Solution {
public:
    bool isPalindrome(int x) {
        if (x < 0) {
            return false;
        } else {
            unsigned int num = x;
            unsigned int mirror = 0;
            while (x) {    
                mirror = mirror * 10 + x % 10;
                x /= 10;
            }
            return mirror == num;
        }
    }
};
